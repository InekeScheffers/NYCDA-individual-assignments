html
	head
	body
		h1 Register
		form(action='/' method='POST')
			label name
			input#name(name='name' required)
			label email
			input#email(name='email' required)
			label password
			input#password(name='password' type='password' required)
			input(type='submit' value='register' id='submit')
		h1 Log in
		form(action='/' method='POST')
			label name
			input#loginname(name='loginname' required)
			label password
			input#loginpassword(name='loginpassword' type='password' required)
			input(type='submit' value='login' id='submit')
		h2#error-message=message