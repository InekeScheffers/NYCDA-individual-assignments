html
	include includes/header.pug
	body
		include includes/nav.pug
		div#start-content.container
			h1 Register
			form.form-horizontal(action='/register' method='POST')
				div.form-group
						label
						//- required makes sure html will not submit (make post request to back end) when a field is empty
						//- pattern that it isn't more than 255 characters
						input.form-control#name(name='name' placeholder="User name" required pattern=".{1,255}" title="User name can't be more than 255 characters")
				div.form-group
						label
						//- type makes sure html will not submit (make post request to back end) when a field gets the wrong type of input
						input.form-control#email(name='email' placeholder="Email" type='email' required pattern=".{1,255}" title="Email can't be more than 255 characters")
				div.form-group
						label
						//- pattern makes sure lentgh is at least 8
						//- onchange that it matches confirmPassword
						input.form-control#password(name='password' placeholder="Password" type='password' pattern=".{8,255}" required onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Must have at least 8 characters' : ''); if(this.checkValidity()) form.confirmPassword.pattern = this.value;")
				div.form-group
						label
						//- pattern makes sure lentgh is at least 8
						//- onchange that it matches confirmPassword
						input.form-control#confirmPassword(name='confirmPassword' type='password' pattern=".{8,255}" required onchange="this.setCustomValidity(this.validity.patternMismatch ? 'Please enter the same password' : '');" placeholder="Confirm password")
				div#form-button.form-group
						button.btn.btn-primary.btn-lg(type='submit') Register
			h1 Log in
			form.form-horizontal(action='/login' method='POST')
				div.form-group
						label
						input.form-control#loginname(name='loginname' placeholder="User name" required autofocus pattern=".{1,255}" title="User name can't be more than 255 characters")
				div.form-group
						label
						input.form-control#loginpassword(name='loginpassword' placeholder="Password" type='password' required pattern=".{1,255}" title="Password can't be more than 255 characters")
				div#form-button.form-group
						button.btn.btn-primary.btn-lg(type='submit') Log in
			//- shows message when it's send from the backend 
			h5#errormessage=message
		include includes/footer.pug