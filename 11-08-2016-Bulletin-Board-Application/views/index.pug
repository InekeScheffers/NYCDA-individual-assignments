html
	head
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(type="text/css" rel="stylesheet" href="css/bootstrap.min.css")
		link(type="text/css" rel="stylesheet" href="css/style.css")
		title Bulletin Board
	body
		//- nav which collapses into hamburger menu when you view it on a small screen/mobile device
		nav(class="navbar navbar-inverse navbar-fixed-top")
			div(class="container")
				div(class="navbar-header")
					button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
						span(class="sr-only") Toggle navigation
						span(class="icon-bar")
						span(class="icon-bar")
					a(class="navbar-brand" href="/") Bulletin Board App
				div(id="navbar" class="collapse navbar-collapse")
					ul(class="nav navbar-nav")
						li(class="active")
							a(href="/") Leave a message
						li
							a(href="/all-comments") Bulletin board
		div(id="start-content" class="container")
			div(class="col-sm-10")
				h1 Sign my bulletin board
			//- form which input is a post request
			form(name='message-form' method='POST' action='/' class='form-horizontal')
				div(class="form-group")
					div(class="col-sm-10")
						label
						input#name(type = 'text' placeholder='Your name' name = 'name' class="form-control")
				div(class="form-group")
					div(class="col-sm-10")
						label
						input#title(type = 'text' placeholder='Title for your message' name = 'title' class="form-control")
				div(class="form-group")
					div(class="col-sm-10")
						label
						textarea#body(type = 'text' placeholder = 'Your message' name = 'body' class="form-control" rows="6")
				div(class="col-sm-10")
					//- if a field is empty show error message
					if fieldEmptyError
						p(style="white-space:pre-wrap;" class="errorMessage") #{errorMessage}
				div(class="form-group" id="form-button")
					div(class="col-sm-10")
						button(type='submit' class="btn btn-primary btn-lg") Leave message
		script(type="text/javascript" src="js/jquery-3.1.1.min.js")
		script(type="text/javascript" src="js/bootstrap.min.js")
