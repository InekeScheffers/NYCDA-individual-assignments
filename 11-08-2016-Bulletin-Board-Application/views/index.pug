html
	head
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(type="text/css" rel="stylesheet" href="css/bootstrap.min.css")
		link(type="text/css" rel="stylesheet" href="css/style.css")
		title Bulletin Board
	body
		//- nav
		nav(class="navbar navbar-inverse navbar-fixed-top")
			div(class="container")
				div(class="navbar-header")
					button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
						span(class="sr-only") Toggle navigation
						span(class="icon-bar")
						span(class="icon-bar")
					a(class="navbar-brand" href="/") Bulletin Board App
				div(id="navbar" class="collapse navbar-collapse")
					ul(class="nav navbar-nav")
						li(class="active")
							a(href="/") Leave a message
						li
							a(href="/all-comments") Bulletin board
		div(id="start-content" class="container")
			h1 Sign our bulletin board
			//- if a field is empty show error message
			if fieldEmptyError
					p(class="errorMessage") #{errorMessage}
			form(name='message-form' method='POST' action='/index')
				label(for = 'title') Title
					input#title(type = 'text', placeholder='Title', name = 'title')
				label(for = 'body') Message
					input#body(type = 'text', placeholder = 'Message', name = 'body')
				button(type='submit' id='button') Leave message
		script(type="text/javascript" src="js/jquery-3.1.1.min.js")
		script(type="text/javascript" src="js/bootstrap.min.js")
