html
	head
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		//- materialize css
		link(type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection")
		//- Let browser know website is optimized for mobile
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		//- own css
		link(type="text/css" rel="stylesheet" href="css/style.css")
		title User Information App
	body
		div(class="container")
			//- navigation using materialize
			nav
				div(class='nav-wrapper')
					a(href='/' class='brand-logo right') User Information App
					a(href='' data-activates='mobile-demo' class='button-collapse')
						i(class='material-icons') menu
					ul(id='nav-mobile' class='left hide-on-med-and-down')
						li(class='active') 
							a(href='all-users') Display all users
						li 
							a(href='search-user') Search user
						li
							a(href='add-user') Add user
					//- hamburger menu when viewed on mobile
					ul(class='side-nav' id='mobile-demo')
						li(class='active')
							a(href='all-users') Display all users
						li 
							a(href='search-user') Search user
						li
							a(href='add-user') Add user
		div(class="container container-content")
			h1 Search user
			if fieldEmptyError
				p(class="errorMessage") #{errorMessage}
			//- search bar
			form(method='POST' action='/result-search')
				div.form-group 
					input#search.form-control(type ='text', placeholder ='First- or Lastname' name ='search')
					button.btn.btn-primary(type='submit') Search
		//- jquery
		script(type="text/javascript" src="js/jquery-3.1.1.min.js")
		//- materialize js
		script(type="text/javascript" src="js/materialize.min.js")
		script(type="text/javascript" src="js/main.js")
		//- konami code
		script(type='text/javascript' src='js/konami.js')