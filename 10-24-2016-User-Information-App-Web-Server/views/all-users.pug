html
	head
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		//- materialize css
		link(type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection")
		//- Let browser know website is optimized for mobile
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		//- own css
		link(type="text/css" rel="stylesheet" href="css/style.css")
		title User Information App
	body
		div(class="container")
			//- navigation using materialize
			nav
				div(class='nav-wrapper')
					a(href='/' class='brand-logo right') User Information App
					a(href='' data-activates='mobile-demo' class='button-collapse')
						i(class='material-icons') menu
					ul(id='nav-mobile' class='left hide-on-med-and-down')
						li(class='active') 
							a(href='all-users') Display all users
						li 
							a(href='search-user') Search user
						li
							a(href='add-user') Add user
					//- hamburger menu when viewed on mobile
					ul(class='side-nav' id='mobile-demo')
						li(class='active')
							a(href='all-users') Display all users
						li 
							a(href='search-user') Search user
						li
							a(href='add-user') Add user
		div(class="container container-content")
			h1 All users
			//- show a list of all users from the user.json file, the data read with the readFile function which passes all data to this file with {data: parsedData}
			ul
				each thing in data
					li
						//- make of every item in list a form, so we can post it's index to the back-end (app.js) and delete the user when we click the trashcan
						//- method is post (post it's index) action is delete-user with that index
						form(name='user-form' method='POST' action='/delete-user')
							//- input hidden so you don't see an input field: value = it's index
							input#email.form-control(type ='hidden', name = 'index', value=thing.index)
							//- display object's first-, lastname and email
							span #{thing.firstname} #{thing.lastname}: #{thing.email} 
							//- used btn-floating = materialize styling
							button.btn-floating(type='submit' id='button')
								//- delete icon of materialize
								i(class = "material-icons") delete
 														

		//- jquery
		script(type="text/javascript" src="js/jquery-3.1.1.min.js")
		//- materialize js
		script(type="text/javascript" src="js/materialize.min.js")
		script(type="text/javascript" src="js/main.js")
		//- konami code
		script(type='text/javascript' src='js/konami.js')
